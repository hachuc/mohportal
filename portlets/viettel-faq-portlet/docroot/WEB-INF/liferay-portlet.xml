<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>legal_faq</portlet-name>
		<icon>/images/portlet_icon/legal_faq_portlet_icon.png</icon>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/legal_faq_view.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>viettel-faq-portlet</css-class-wrapper>
	</portlet>
	
	<portlet>
		<portlet-name>legal_faq_management</portlet-name>
		<icon>/images/portlet_icon/legal_faq_portlet_icon.png</icon>
		<control-panel-entry-category>content</control-panel-entry-category>
		<control-panel-entry-weight>3.0</control-panel-entry-weight>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>legal_faq_management-portlet</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	
	<portlet>
		<portlet-name>legal_faq_categories</portlet-name>
		<icon>/images/portlet_icon/legal_faq_category_portlet_icon.png</icon>
		<configuration-action-class>com.portal_egov.portlet.legal_faq.action.LegalFAQCategoriesConfigActionImpl</configuration-action-class>
		<instanceable>true</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>legal_faq_categories-portlet</css-class-wrapper>
	</portlet>
	
	<portlet>
		<portlet-name>legal_faq_lastest_entries</portlet-name>
		<icon>/images/portlet_icon/legal_faq_portlet_icon.png</icon>
		<configuration-action-class>com.portal_egov.portlet.legal_faq.action.LegalFAQLastestEntryConfigActionImpl</configuration-action-class>
		<instanceable>true</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>legal_faq_lastest_entries-portlet</css-class-wrapper>
	</portlet>
	
	<portlet>
		<portlet-name>Comments</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/validator.js
		</footer-portlet-javascript>
		<css-class-wrapper>comments-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>survey</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>survey-portlet</css-class-wrapper>
	</portlet>
	
	<portlet>
		<portlet-name>feedback</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>feedback-portlet</css-class-wrapper>
	</portlet>
	
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>